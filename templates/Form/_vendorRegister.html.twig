<div class="ui padded segment">
    {{ sylius_template_event('sylius.shop.register.before_form') }}

    {{ form_start(form, {'action': path('vendor_register_form'), 'attr': {'class': 'ui loadable form', 'novalidate': 'novalidate'}}) }}
    <h3 class="header">{{ 'bitbag_mvm_plugin.ui.become_a_vendor'|trans }}</h3>
    {{ form_row(form.companyName, sylius_test_form_attribute('companyName')) }}
    {{ form_row(form.taxIdentifier) }}
    {{ form_row(form.phoneNumber) }}
    <div class="field" id="add-avatar">
        {% form_theme form 'Vendor/ProductListing/ImageTheme.html.twig' %}
        <label>{{ 'sylius.ui.image'|trans }}</label>
        {{ form_row(form.image, {'label': false}) }}
    </div>
    {{ form_row(form.description) }}
    {{ form_row(form.vendorAddress) }}

    <div style="display: none">
        {{ form_row(form.shopUser) }}
    </div>

    {{ sylius_template_event('sylius.shop.register.form', {'form': form}) }}

    <button type="submit" class="ui large primary button" {{ sylius_test_html_attribute('register-button') }}>
        {{ 'bitbag_mvm_plugin.ui.become_a_vendor'|trans }}
    </button>

    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
</div>

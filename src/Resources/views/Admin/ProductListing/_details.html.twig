<div id="details">
    <h4 class="ui top attached large header">{{ 'bitbag_mvm_plugin.ui.details'|trans }}</h4>
    <div class="ui attached segment">
        <table class="ui very basic celled table">
            <tbody>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_mvm_plugin.ui.id'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        <li>{{ productDraft.id }}</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_mvm_plugin.ui.name'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        <li>{{ productDraft.code }}</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_mvm_plugin.ui.published_at'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        <li>{{ productDraft.publishedAt | date }}</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_mvm_plugin.ui.status'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        <li>{{ productDraft.status }}</li>
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>

        {% if productDraft.status == 'under_verification' %}
            <div class="ui buttons">
                {% include '@BitBagSyliusMultiVendorMarketplacePlugin/Grid/Action/accept_product_listing.html.twig' %}
            </div>
            <div class="ui form">
                {{ form_start(form, { attr: { class: 'ui form'}}) }}
                <div class="ui stackable grid">
                    <div class="column ten wide">
                        {{ form_row(form.messages.vars.prototype.content) }}
                    </div>
                    <div class="column six wide">
                        {{ form_row(form.messages.vars.prototype.file) }}
                    </div>
                    {{ form_row(form._token) }}
                    <div class="button">
                        <input class="ui red labeled icon button" type="submit" value="{{ 'bitbag_mvm_plugin.ui.reject'|trans }}"/>

                    </div>
                </div>

                {{ form_end(form, { 'render_rest': false }) }}
            </div>

        {% endif %}
    </div>
</div>

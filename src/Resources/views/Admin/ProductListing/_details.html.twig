<div id="details">
    <h4 class="ui top attached large header">{{ 'bitbag_mvm_plugin.ui.details'|trans }}</h4>
    <div class="ui attached segment">
        {% include '@BitBagSyliusMultiVendorMarketplacePlugin/Admin/ProductListing/details/_attributes.html.twig' %}
        <div class="ui hidden divider"></div>
        {% include '@BitBagSyliusMultiVendorMarketplacePlugin/Admin/ProductListing/details/_media.html.twig' %}
        <div class="ui hidden divider"></div>
        {% include '@BitBagSyliusMultiVendorMarketplacePlugin/Admin/ProductListing/details/_more_details.html.twig' %}
        <div class="ui hidden divider"></div>
        <table class="ui very basic celled table">
            <tbody>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_mvm_plugin.ui.id'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        <li>{{ productDraft.id }}</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_mvm_plugin.ui.name'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        <li>{{ productDraft.code }}</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_mvm_plugin.ui.published_at'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        <li>{{ productDraft.publishedAt | date }}</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_mvm_plugin.ui.status'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        <li>{{ productDraft.status }}</li>
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="ui hidden divider"></div>

<div id="taxonomy">
    <h4 class="ui top attached large header">{{ 'sylius.ui.taxonomy'|trans }}</h4>
    <div class="ui attached segment">
        <table class="ui very basic celled table">
            <tbody>
            {% if productDraft.mainTaxon != null %}
                <tr>
                    <td class="five wide"><strong class="gray text">{{ 'sylius.ui.main_taxon'|trans }}</strong></td>
                    <td>{{ productDraft.mainTaxon.getFullName }}</td>
                </tr>
            {% endif %}
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'sylius.ui.product_taxons'|trans }}</strong></td>
                <td>
                    <ul class="ui bulleted list">
                        {% for productDraftTaxon in productDraft.productDraftTaxons %}
                            <li>{{ productDraftTaxon.getTaxon.getFullName }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>


{% if productDraft.status == 'under_verification' %}
    <div class="ui divider"></div>
    <h4 class="ui top attached large header">{{ 'bitbag_mvm_plugin.ui.rejection_details'|trans }}</h4>
    <div class="ui form" style="position: relative">
        {{ form_start(form, { attr: { class: 'ui form'}}) }}
        <div class="ui attached segment">
            <div class="ui stackable grid">
                <div class="column ten wide">
                    {{ form_row(form.category) }}
                    {{ form_row(form.messages.vars.prototype.content) }}
                </div>
                <div class="column six wide">
                    {{ form_row(form.messages.vars.prototype.file) }}
                </div>
                {{ form_row(form._token) }}
            </div>
        </div>
        <div class="ui hidden divider"></div>
        <div class="button" style="display: inline-block">
            <input class="ui red labeled icon button" type="submit" value="{{ 'bitbag_mvm_plugin.ui.reject'|trans }}"/>
        </div>
        {{ form_end(form, { 'render_rest': false }) }}
        {% include '@BitBagSyliusMultiVendorMarketplacePlugin/Grid/Action/accept_product_listing.html.twig' %}
    </div>
{% endif %}

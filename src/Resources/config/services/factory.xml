<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\VendorProfileFactory"
                 id="bitbag_mvm_plugin.factory.vendor_profile_factory"
                 public="true">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\AddressFactory"
                 id="bitbag_mvm_plugin.factory.vendor_address_factory"
                 public="true">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\VendorProfileUpdateFactory"
                 id="bitbag_mvm_plugin.factory.vendor_profile_update_factory">
            <argument type="service" id="bitbag_mvm_plugin.generator.token_generator"/>
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ChannelPricingFactory"
                 id="bit_bag.mvm_plugin.factory.channel_pricing_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ProductTranslationFactory"
                 id="bit_bag.mvm_plugin.factory.product_translation_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ProductVariantFactory"
                 id="bit_bag.mvm_plugin.factory.product_variant_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ProductFromDraftFactory"
                 id="bitbag_mvm_plugin.factory.product_from_draft_factory">
            <argument type="service" id="sylius.custom_factory.product" />
            <argument type="service" id="bit_bag.mvm_plugin.factory.product_translation_factory" />
            <argument type="service" id="bit_bag.mvm_plugin.factory.product_variant_factory" />
            <argument type="service" id="bit_bag.mvm_plugin.factory.channel_pricing_factory" />
            <argument type="service" id="sylius.repository.channel" />
        </service>
    </services>
</container>

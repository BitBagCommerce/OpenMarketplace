<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="false" autoconfigure="false" />

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\Message\MessageFactory"
                 id="bitbag.sylius_multi_vendor_marketplace_plugin.factory.message.message_factory"
                 decorates="bitbag_multi_vendor_marketplace.factory.conversation_message" >
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.factory.message.message_factory.inner" />

        </service>
        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\VendorProfileFactory"
                 id="bitbag_mvm_plugin.factory.vendor_profile_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\AddressFactory"
                 id="bitbag_mvm_plugin.factory.vendor_address_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\VendorProfileUpdateFactory"
                 id="bitbag_mvm_plugin.factory.vendor_profile_update_factory">
            <argument type="service" id="bitbag_mvm_plugin.generator.token_generator"/>
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ChannelPricingFactory"
                 id="bitbag.mvm_plugin.factory.channel_pricing_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ProductTranslationFactory"
                 id="bitbag.mvm_plugin.factory.product_translation_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ProductVariantFactory"
                 id="bitbag.mvm_plugin.factory.product_variant_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ProductFromDraftFactory"
                 id="bitbag_mvm_plugin.factory.product_from_draft_factory">
            <argument type="service" id="sylius.custom_factory.product" />
            <argument type="service" id="bitbag.mvm_plugin.factory.product_translation_factory" />
            <argument type="service" id="bitbag.mvm_plugin.factory.product_variant_factory" />
            <argument type="service" id="bitbag.mvm_plugin.factory.channel_pricing_factory" />
            <argument type="service" id="sylius.repository.channel" />
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\ProductListingFromDraftFactory"
                 id="bitbag_mvm_plugin.factory.product_listing_from_draft_factory">
            <argument type="service" id="bitbag_mvm_plugin.factory.product_listing" />
            <argument type="service" id="security.untracked_token_storage" />
            <argument type="service" id="bitbag_mvm_plugin.factory.product_draft" />
            <argument type="service" id="bitbag.mvm_plugin.cloner.product_listing_translation_cloner" />
            <argument type="service" id="bitbag.mvm_plugin.cloner.product_listing_pricing_cloner" />
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\VendorImageFactory"
                 id="bitbag.mvm_plugin.service.vendor_image_factory" >
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\AddressFactory" id="bitbag.mvm.factory.address_factory">

        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\OrderFactory"
                 id="bitbag.mvm_plugin.factory.order_factory">
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Factory\OrderItemFactory"
                 id="bitbag.mvm_plugin.factory.order_item_factory">
        </service>

    </services>
</container>

<?xml version="1.0" encoding="utf-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Operator\ProductDraftFilesOperator"
                 id="bitbag_mvm_plugin.operator.product_draft_files">
            <argument type="service">
                <service class="Gaufrette\Filesystem">
                    <argument>%sylius.uploader.filesystem%</argument>
                    <factory service="knp_gaufrette.filesystem_map" method="get" />
                </service>
            </argument>
            <argument type="service" id="bitbag_mvm_plugin.factory.product_image"/>
        </service>
        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Operator\ProductDraftTaxonsOperator"
                 id="bitbag_mvm_plugin.operator.product_draft_taxons">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="sylius.factory.product_taxon" />
        </service>
    </services>
</container>

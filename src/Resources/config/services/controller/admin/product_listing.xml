<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bitbag_mvm_plugin.controller.action.admin.product_listing.show_action"
                 class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Admin\ProductListing\ShowAction">
            <argument type="service" id="bitbag_mvm_plugin.repository.product_listing" />
            <argument type="service" id="twig" />
            <argument type="service" id="bitbag_mvm_plugin.repository.product_draft" />
            <argument type="service" id="bitbag_mvm_plugin.repository.conversation"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.facade.message.add_message_facade"/>
            <argument type="service" id="router.default" />
            <argument type="service" id="translator" />
            <tag name="controller.service_arguments" />
        </service>

        <service id="bitbag_mvm_plugin.controller.action.admin.product_listing.accept_action"
                 class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Admin\ProductListing\AcceptAction">
            <argument type="service" id="bitbag_mvm_plugin.repository.product_listing" />
            <argument type="service" id="router.default" />
            <argument type="service" id="bitbag_mvm_plugin.state_machine.product_draft.transition" />
            <argument type="service" id="bitbag_mvm_plugin.repository.product_draft" />
            <tag name="controller.service_arguments" />
        </service>

        <service id="bitbag_mvm_plugin.controller.action.admin.product_listing.reject_action"
                 class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Admin\ProductListing\RejectAction">
            <argument type="service" id="bitbag_mvm_plugin.repository.product_listing" />
            <argument type="service" id="router.default" />
            <argument type="service" id="bitbag_mvm_plugin.state_machine.product_draft.transition" />
            <argument type="service" id="bitbag_mvm_plugin.repository.product_draft" />
            <tag name="controller.service_arguments" />
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Admin\ProductListing\RestoreAction"
                 id="bitbag_mvm_plugin.controller.product_listing.restore_action">
            <argument type="service" id="bitbag_mvm_plugin.repository.product_listing"/>
            <argument type="service" id="router.default"/>
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>

<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bitbag_mvm_plugin.controller.action.vendor.product_listing.show_product_listing_index"
                 class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Vendor\ProductListing\ShowProductListingsAction">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="controller.service_arguments" />
        </service>

        <service id="bitbag_mvm_plugin.controller.action.vendor.product_listing.create_product_action"
                 class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Vendor\ProductListing\CreateProductAction">
            <argument type="service">
                <service class="Sylius\Component\Resource\Metadata\MetadataInterface">
                    <factory service="sylius.resource_registry" method="get" />
                    <argument type="string">sylius.shop_user</argument>
                </service>
            </argument>
            <argument type="service" id="sylius.resource_controller.request_configuration_factory" />
            <argument type="service" id="sylius.resource_controller.new_resource_factory" />
            <argument type="service" id="bitbag_mvm_plugin.factory.product_draft" />
            <argument type="service" id="bitbag_mvm_plugin.factory.product_listing_from_draft_factory"/>
            <argument type="service" id="sylius.resource_controller.redirect_handler"/>
            <argument type="service" id="sylius.resource_controller.flash_helper"/>
            <argument type="service" id="sylius.resource_controller.event_dispatcher"/>

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <argument type="service" id="bitbag_mvm_plugin.state_machine.product_draft.transition"/>
            <argument type="service" id="bitbag_mvm_plugin.repository.product_draft"/>
            <argument type="service" id="sylius.image_uploader"/>
            <tag name="controller.service_arguments" />
        </service>

        <service id="bitbag_mvm_plugin.controller.action.vendor.product_listing.edit_product_action"
                 class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Vendor\ProductListing\EditProductAction">
            <argument type="service">
                <service class="Sylius\Component\Resource\Metadata\MetadataInterface">
                    <factory service="sylius.resource_registry" method="get" />
                    <argument type="string">bitbag_mvm_plugin.product_draft</argument>
                </service>
            </argument>
            <argument type="service" id="sylius.resource_controller.request_configuration_factory" />
            <argument type="service" id="bitbag_mvm_plugin.repository.product_draft"/>
            <argument type="service" id="bitbag_mvm_plugin.state_machine.product_draft.transition"/>
            <argument type="service" id="bitbag_mvm_plugin.factory.product_listing_from_draft_factory"/>
            <argument type="service" id="sylius.image_uploader"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>

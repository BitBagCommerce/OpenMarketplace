<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Conversation\ConversationController"
                 id="bitbag_mvm_plugin.controller.conversation.conversation_controller">
            <argument type="service" id="twig" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="bitbag_mvm_plugin.repository.conversation" />
            <argument type="service" id="bitbag_mvm_plugin.current_user_resolver" />
            <argument type="service" id="request_stack"/>
            <tag name="controller.service_arguments" />
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Conversation\CreateNewConversationAction"
                 id="bitbag_mvm_plugin.controller.action.conversation.create_new_conversation_action">
            <argument type="service" id="form.factory"/>
            <argument type="service" id="twig"/>
            <argument type="service" id="api_platform.router"/>
            <argument type="service" id="session.flash_bag"/>
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.facade.message.add_message_facade"/>
            <argument type="service" id="bitbag_mvm_plugin.repository.conversation"/>
            <tag name="controller.service_arguments" />
        </service>

        <service id="bitbag_mvm_plugin.controller.action.conversation_message.add_message_action"
                 class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\ConversationMessage\AddMessageAction">
            <argument type="service" id="form.factory" />
            <argument type="service" id="session.flash_bag" />
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.facade.message.add_message_facade" />
            <argument type="service" id="router"/>
            <tag name="controller.service_arguments" />
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Conversation\SendArchiveRequestAction"
                 id="bitbag_mvm_plugin.controller.action.conversation.send_archive_request_action">
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.facade.message.add_message_facade" />
            <argument type="service" id="api_platform.router" />
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.factory.message.message_factory" />
            <tag name="controller.service_arguments" />
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\VendorProfileUpdateAction"
                 id="bitbag_mvm_plugin.controller.vendor_profile_update_action">
            <argument type="service" id="bitbag_mvm_plugin.updater.vendor_profile_updater"/>
            <argument type="service" id="bitbag_mvm_plugin.provider.vendor"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="router"/>
            <argument type="service" id="bitbag_mvm_plugin.factory.vendor_profile_factory"/>
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="sylius.image_uploader" />
            <argument type="service" id="bitbag.mvm_plugin.service.vendor_profile_image_factory" />

            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\ConfirmProfileUpdateAction"
                 id="bitbag_mvm_plugin.controller.confirm_profile_update_action">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="bitbag_mvm_plugin.updater.vendor_profile_updater"/>
            <argument type="service" id="security.helper"/>
            <argument type="service" id="router"/>
            <argument type="service" id="bitbag_mvm_plugin.provider.vendor"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\VendorController"
                 id="bitbag_mvm_plugin.controller.vendor_controller"
                 parent="bitbag_mvm_plugin.controller.vendor">
            <argument type="service" id="bitbag_mvm_plugin.provider.vendor" />
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\Action\Vendor\ShowVendorPageAction"
                 id="bitbag.mvm_plugin.controller.show_vendor_page_action"
                 public="true"
        >
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <argument type="service" id="bitbag.mvm_plugin.repository.vendor_repository"/>
            <argument type="service" id="bitbag.mvm_plugin.repository.product_repository"/>
            <argument type="service" id="sylius.context.channel"/>
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\ProductListing\ProductDraftController"
                 id="bitbag_mvm_plugin.controller.productDraft"
                 parent="bitbag_mvm_plugin.controller.product_draft">
            <argument type="service" id="sylius.image_uploader" />
        </service>
    </services>
</container>

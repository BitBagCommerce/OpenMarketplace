<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bitbag.mvm_plugin.repository.product_taxon" class="BitBag\OpenMarketplace\Repository\ProductListing\ProductDraftRepository" public="true">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service">
                <service class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>BitBag\OpenMarketplace\Entity\ProductListing\ProductDraftTaxon</argument>
                    <factory service="doctrine.orm.default_entity_manager" method="getClassMetadata"/>
                </service>
            </argument>
        </service>
        <service id="bitbag.mvm_plugin.factory.product_taxon" class="Sylius\Component\Resource\Factory\Factory" public="true">
            <argument>BitBag\OpenMarketplace\Entity\ProductListing\ProductDraftTaxon</argument>
        </service>
    </services>
</container>

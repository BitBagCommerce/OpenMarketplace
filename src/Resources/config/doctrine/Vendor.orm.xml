<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\Vendor" table="bitbag_mvm_vendor">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="companyName" column="company_name" type="text" />
        <field name="taxIdentifier" column="tax_identifier" type="text" />
        <field name="phoneNumber" column="phone_number" type="text" />
        <field name="status" column="status" type="string" />
        <field name="enabled" column="enabled" type="boolean" />

        <one-to-one field="vendorAddress" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorAddress" >
            <join-column name="vendor_address_id" referenced-column-name="id" on-delete="SET NULL" />
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-one>      
        
        <one-to-one field="shopUser" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\ShopUser" inversed-by="vendor">
            <join-column name="user_id" referenced-column-name="id" />
        </one-to-one>

        <field name="slug" column="slug" type="string" />
        <field name="description" column="description" type="string" length="2048" />
        <one-to-one field="image"
                    target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorImage"
                    mapped-by="owner"
                    orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-one>
        <one-to-many field="products"
                     target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\Product"
                     mapped-by="vendor">
        </one-to-many>
    </mapped-superclass>
</doctrine-mapping>
